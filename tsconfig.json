{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "lib": [
      "esnext", "dom"
    ],


    "declaration": false,
    "downlevelIteration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "inlineSourceMap": true,

    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "pretty": true,

    "removeComments": true,
    "sourceMap": false,

    "strictNullChecks": false,

    "moduleResolution": "node",


    "module": "es6",
    "target": "esnext",

    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/typescript-tuple/index.d.ts",
      "./node_modules/rxjs/index.d.ts"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
